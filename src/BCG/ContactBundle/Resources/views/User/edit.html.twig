{% extends 'BCGContactBundle::layout.html.twig' %}

{% block title %}Edit User{% endblock %}

{% block body %}
	{% trans_default_domain 'FOSUserBundle' %}

	<div class="form-fields col-md-6 col-md-offset-3 top-space-md">
		{% if user.agency == app.user.agency %}
			<div class="alert alert-info">Edit this user's information below:</div>
			<br>
			{{ form_start(form) }}
			{{ form_widget(form) }}
			{{ form_end(form) }}
		{% else %}
			<div class="alert alert-danger">
				Only members of {{ user.agency.name }} can edit this user.
			</div>
			<br>
		{% endif %}
		<a class="btn btn-default btn-block" href="{{ path('BCGContactBundle_agency_show', { 'id': app.user.agency.id }) }}"">
			<i class="glyphicon glyphicon-menu-left chevron-left"></i> 
			Back
		</a>
	</div>
{% endblock %}